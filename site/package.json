{
  "name": "site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "start:standalone": "node .next/standalone/server.js",
    "start:prod": "NODE_ENV=production next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:generate": "cd ../shared && prisma generate",
    "db:migrate": "cd ../shared && prisma db push",
    "db:seed": "cd ../shared && tsx prisma/seed/hrm-seed.ts",
    "db:studio": "cd ../shared && prisma studio",
    "create-admin": "tsx scripts/quick-create-admin.ts",
    "create-admin-interactive": "tsx scripts/create-admin-user.ts",
    "format": "prettier --write .",
    "clean": "rm -rf .next",
    "dev:unified": "next dev --turbo",
    "build:check": "npm run type-check && npm run lint && npm run build",
    "lint:fix": "eslint . --fix && prettier --write .",
    "test:unit": "jest",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "analyze": "ANALYZE=true npm run build"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@heroicons/react": "^2.2.0",
    "@mui/icons-material": "^7.1.1",
    "@mui/material": "^7.1.1",
    "@mui/x-data-grid": "^8.5.2",
    "@prisma/client": "^6.11.1",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.11",
    "autoprefixer": "10.4.20",
    "axios": "^1.10.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jsonwebtoken": "^9.0.2",
    "jssip": "^3.10.1",
    "lucide-react": "^0.517.0",
    "next": "latest",
    "next-auth": "5.0.0-beta.25",
    "next-pwa": "^5.6.0",
    "postcss": "^8.5.1",
    "postgres": "^3.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "typescript": "5.7.3",
    "use-debounce": "^10.0.4",
    "zod": "^3.25.17"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.18",
    "@types/node": "^22.16.3",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "sharp": "^0.34.2",
    "tailwindcss": "^4.1.11",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3"
  }
}
