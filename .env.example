# KataCore StartKit v1 - Environment Configuration Template
# Copy this file to .env and update with your secure values
# Note: During deployment, these values will be auto-generated with secure passwords

# ===== APPLICATION CONFIGURATION =====
NODE_ENV=production
API_VERSION=latest
SITE_VERSION=latest
RESTART_POLICY=unless-stopped

# ===== PORT CONFIGURATION =====
PORT=3000
SITE_PORT=3000
API_PORT=3001

# ===== DATABASE CONFIGURATION =====
POSTGRES_DB=katacore
POSTGRES_USER=katacore
POSTGRES_PASSWORD=change_this_secure_password
DATABASE_URL=postgresql://katacore:change_this_secure_password@postgres:5432/katacore

# ===== REDIS CONFIGURATION =====
REDIS_PASSWORD=change_this_redis_password
REDIS_URL=redis://:change_this_redis_password@redis:6379

# ===== AUTHENTICATION & SECURITY =====
JWT_SECRET=change_this_jwt_secret_64_characters_minimum
ENCRYPTION_KEY=change_this_encryption_key_32_characters
LOG_LEVEL=info

# ===== MINIO CONFIGURATION =====
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=change_this_minio_password
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ENDPOINT=minio
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=change_this_minio_password
MINIO_USE_SSL=false

# ===== PGADMIN CONFIGURATION =====
PGADMIN_PORT=5050
PGADMIN_DEFAULT_EMAIL=admin@localhost
PGADMIN_DEFAULT_PASSWORD=change_this_pgladmin_password

# ===== INTERNAL SERVICES =====
INTERNAL_API_URL=http://api:3001

# ===== DEPLOYMENT CONFIGURATION =====
# These will be set automatically during deployment
SERVER_IP=127.0.0.1
DOMAIN=localhost
DEPLOY_TYPE=development
GRAFANA_ADMIN_PASSWORD=__SECURE_GRAFANA_PASSWORD__

# API Configuration
API_VERSION=latest
API_PORT=3001
CORS_ORIGIN=https://your-domain.com

# Site Configuration
SITE_VERSION=latest
NEXT_PUBLIC_API_URL=https://your-domain.com/api
INTERNAL_API_URL=http://api:3001

# Domain & SSL Configuration
DOMAIN=your-domain.com
LETSENCRYPT_EMAIL=admin@your-domain.com

# Cloud Server IP
SERVER_IP=116.118.85.41

# Optional: Development overrides
# POSTGRES_HOST=localhost
# REDIS_HOST=localhost
# MINIO_HOST=localhost
