# KataCore Environment Configuration Template
# Copy this file to .env.prod and fill in your values

# ===== Application Configuration =====
NODE_ENV=production
API_VERSION=latest
SITE_VERSION=latest
RESTART_POLICY=unless-stopped

# ===== Port Configuration =====
PORT=3000
SITE_PORT=3000
API_PORT=3001

# ===== Database Configuration =====
POSTGRES_DB=katacore
POSTGRES_USER=katacore
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://katacore:your_secure_password_here@postgres:5432/katacore

# ===== Redis Configuration =====
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:your_redis_password_here@redis:6379

# ===== Authentication & Security =====
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
LOG_LEVEL=info

# ===== MinIO Configuration =====
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=your_minio_password_here
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ENDPOINT=minio
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=your_minio_password_here
MINIO_USE_SSL=false

# ===== PgAdmin Configuration =====
PGADMIN_PORT=5050
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=your_pgadmin_password_here

# ===== Internal Services =====
INTERNAL_API_URL=http://api:3001

# ===== Server Configuration =====
SERVER_IP=your_server_ip_here
DOMAIN=your_domain_here
DEPLOY_TYPE=full

# ===== SSL Configuration (for full deployment) =====
SSL_EMAIL=admin@your_domain_here

# ===== CORS Configuration =====
CORS_ORIGIN=https://your_domain_here
NEXT_PUBLIC_API_URL=https://api.your_domain_here
NEXT_PUBLIC_APP_URL=https://your_domain_here
NEXT_PUBLIC_MINIO_ENDPOINT=https://minio.your_domain_here
