# KataCore Simple Production Environment Template
# Copy this file to .env and fill in the secure values

# Database Configuration (External PostgreSQL)
POSTGRES_DB=katacore_prod
POSTGRES_USER=katacore_user
POSTGRES_PASSWORD=__SECURE_POSTGRES_PASSWORD__
DATABASE_URL=postgresql://katacore_user:__SECURE_POSTGRES_PASSWORD__@116.118.85.41:5432/katacore_prod

# Redis Configuration (External Redis)
REDIS_PASSWORD=__SECURE_REDIS_PASSWORD__
REDIS_URL=redis://:__SECURE_REDIS_PASSWORD__@116.118.85.41:6379

# Application Secrets
JWT_SECRET=__SECURE_JWT_SECRET__
LOG_LEVEL=info
NODE_ENV=production

# MinIO Object Storage (External MinIO/S3)
MINIO_ROOT_USER=katacore_admin
MINIO_ROOT_PASSWORD=__SECURE_MINIO_PASSWORD__
MINIO_ENDPOINT=116.118.85.41
MINIO_PORT=9000
MINIO_ACCESS_KEY=katacore_admin
MINIO_SECRET_KEY=__SECURE_MINIO_PASSWORD__

# pgAdmin Database Management (Optional - if needed)
PGADMIN_EMAIL=admin@your-domain.com
PGADMIN_PASSWORD=__SECURE_PGADMIN_PASSWORD__

# Grafana Monitoring (Optional)
GRAFANA_ADMIN_PASSWORD=__SECURE_GRAFANA_PASSWORD__

# API Configuration
API_VERSION=latest
API_PORT=3001
CORS_ORIGIN=https://your-domain.com

# Site Configuration
SITE_VERSION=latest
NEXT_PUBLIC_API_URL=https://your-domain.com/api
INTERNAL_API_URL=http://api:3001

# Domain & SSL Configuration
DOMAIN=your-domain.com
LETSENCRYPT_EMAIL=admin@your-domain.com

# Cloud Server IP
SERVER_IP=116.118.85.41

# Optional: Development overrides
# POSTGRES_HOST=localhost
# REDIS_HOST=localhost
# MINIO_HOST=localhost
