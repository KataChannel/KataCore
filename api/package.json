{
  "name": "api",
  "version": "1.0.0",
  "description": "NestJS API with Bun",
  "private": true,
  "scripts": {
    "build": "bun run nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "bun run nest start",
    "start:dev": "bun run nest start --watch",
    "start:debug": "bun run nest start --debug --watch",
    "start:prod": "bun dist/src/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:cov": "bun test --coverage",
    "test:debug": "bun --inspect-wait=9229 test",
    "test:e2e": "bun test --testPathPattern=test"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.3",
    "@nestjs/core": "^11.1.3",
    "@nestjs/platform-express": "^11.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@types/bun": "latest",
    "@types/node": "^24.0.7",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  }
}
