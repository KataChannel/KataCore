{
  "name": "api",
  "version": "1.0.0",
  "description": "NestJS API with Bun",
  "private": true,
  "scripts": {
    "// ========== DEVELOPMENT ==========": "",
    "build": "nest build",
    "build:watch": "nest build --watch",
    "build:webpack": "nest build --webpack",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:repl": "nest start --entryFile repl",
    "// ========== TESTING ==========": "",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:cov": "bun test --coverage",
    "test:coverage": "bun test --coverage --reporter=html",
    "test:debug": "bun --inspect-wait=9229 test",
    "test:e2e": "bun test --testPathPattern=test/.*\\.e2e-spec\\.ts$",
    "test:unit": "bun test --testPathPattern=src/.*\\.spec\\.ts$",
    "test:integration": "bun test --testPathPattern=test/.*\\.integration-spec\\.ts$",
    "// ========== LINTING & FORMATTING ==========": "",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:report": "eslint \"{src,apps,libs,test}/**/*.ts\" --format html --output-file eslint-report.html",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "// ========== DATABASE ==========": "",
    "prisma:generate": "cd ../shared && prisma generate",
    "prisma:migrate": "cd ../shared && prisma migrate dev",
    "prisma:migrate:deploy": "cd ../shared && prisma migrate deploy",
    "prisma:migrate:reset": "cd ../shared && prisma migrate reset --force",
    "prisma:seed": "cd ../shared && bun run prisma/seed/hrm-seed.ts",
    "prisma:studio": "cd ../shared && prisma studio",
    "prisma:push": "cd ../shared && prisma db push",
    "// ========== DOCKER ==========": "",
    "docker:build": "docker build -t tazacore-api .",
    "docker:run": "docker run -p 3001:3001 --env-file .env tazacore-api",
    "docker:dev": "docker run -p 3001:3001 -v $(pwd):/app --env-file .env tazacore-api npm run start:dev",
    "docker:test": "docker run --env-file .env.test tazacore-api npm run test",
    "// ========== UTILITIES ==========": "",
    "clean": "rm -rf dist node_modules coverage .nyc_output",
    "clean:dist": "rm -rf dist || true",
    "clean:coverage": "rm -rf coverage .nyc_output",
    "docs:generate": "typedoc --out docs src",
    "docs:serve": "http-server docs -p 8080",
    "// ========== SECURITY ==========": "",
    "audit": "bun audit",
    "audit:fix": "bun audit --fix",
    "security:scan": "bun audit --audit-level moderate",
    "// ========== MONITORING & HEALTH ==========": "",
    "health": "curl -f http://localhost:3001/health || echo 'API not healthy'",
    "logs": "tail -f logs/*.log 2>/dev/null || echo 'No logs found'",
    "// ========== WORKFLOW ==========": "",
    "prestart:prod": "echo 'Starting production server...'",
    "pretest": "npm run prisma:generate",
    "prebuild": "bun run clean:dist",
    "ci": "npm run lint && npm run type-check && npm run test && npm run build",
    "dev:full": "npm run prisma:generate && npm run start:dev"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^11.1.3",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^11.1.3",
    "@prisma/client": "^6.11.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "jsonwebtoken": "^9.0.2",
    "minimatch": "^10.0.3",
    "minio": "^8.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@types/bun": "latest",
    "@types/node": "^24.0.7",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/passport-jwt": "^4.0.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0",
    "typescript": "^5.8.3",
    "prisma": "^6.11.1"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  }
}
