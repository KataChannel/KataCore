# ⚡ Performance Optimization Environment Variables
# Thêm vào .env.local hoặc sử dụng: source .env.optimization

# Tối ưu Next.js startup
export NEXT_TELEMETRY_DISABLED=1
export NODE_OPTIONS="--max-old-space-size=2048 --max-semi-space-size=1024"

# Tối ưu Prisma
export PRISMA_QUERY_ENGINE_LIBRARY=1
export PRISMA_GENERATE_SKIP_AUTOINSTALL=true

# Cache optimization
export NEXT_CACHE_ENABLED=true
export NEXT_CACHE_HANDLER=default

# Build optimization
export NEXT_BUILD_CACHE=true
export NEXT_WEBPACK_USEFILECACHE=true

# Disable debugging trong production
export NODE_ENV=production
export DEBUG=false
