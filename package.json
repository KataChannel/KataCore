{
  "name": "katacore-startkitv1-clean",
  "version": "1.0.0",
  "description": "KataCore StartKit v1 Clean - Production-ready deployment system",
  "private": true,
  "workspaces": [
    "site",
    "api"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:site\" \"bun run dev:api\"",
    "dev:site": "cd site && bun run dev",
    "dev:api": "cd api && bun run start:dev",
    "build": "bun run build:api && bun run build:site",
    "build:site": "cd site && bun run build",
    "build:api": "cd api && bun run build",
    "start": "concurrently \"bun run start:site\" \"bun run start:api\"",
    "start:site": "cd site && bun run start",
    "start:api": "cd api && bun run start:prod",
    "install:all": "bun install && cd site && bun install && cd ../api && bun install",
    "clean": "rm -rf site/node_modules api/node_modules site/.next api/dist",
    "test": "cd api && bun run test",
    "lint": "bun run lint:site && bun run lint:api",
    "lint:site": "cd site && bun run lint",
    "lint:api": "cd api && bun run lint",
    "deploy:simple": "./deploy-startkitv1-clean.sh deploy-simple",
    "deploy:full": "./deploy-startkitv1-clean.sh deploy-full",
    "deploy:guide": "./deploy-startkitv1-clean.sh deploy-guide",
    "deploy:test": "./test-startkitv1-clean.sh",
    "deploy:cleanup": "./deploy-startkitv1-clean.sh cleanup",
    "docker:up": "docker-compose -f docker-compose.startkitv1-clean.yml up -d",
    "docker:down": "docker-compose -f docker-compose.startkitv1-clean.yml down",
    "docker:logs": "docker-compose -f docker-compose.startkitv1-clean.yml logs -f"
  },
  "keywords": [
    "katacore",
    "startkitv1",
    "deployment",
    "docker",
    "nginx",
    "production",
    "nextjs",
    "nestjs",
    "postgresql",
    "redis",
    "minio"
  ],
  "author": "KataCore Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/katacore/startkitv1-clean"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
