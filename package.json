{
  "name": "katacore",
  "version": "1.0.0",
  "description": "KataCore - Next.js site and NestJS API with Bun",
  "private": true,
  "workspaces": [
    "site",
    "api"
  ],
  "scripts": {
    "setup": "./scripts/setup-bun-path.sh",
    "dev": "bun run dev:all",
    "dev:all": "concurrently \"bun run dev:site\" \"bun run dev:api\"",
    "dev:site": "cd site && bun run dev",
    "dev:api": "cd api && bun run start:dev",
    "build": "bun run build:api && bun run build:site",
    "build:site": "cd site && bun run build",
    "build:api": "cd api && bun run build",
    "start": "concurrently \"bun run start:site\" \"bun run start:api\"",
    "start:site": "cd site && bun run start",
    "start:api": "cd api && bun run start:prod",
    "install:all": "bun install && cd site && bun install && cd ../api && bun install",
    "clean": "rm -rf site/node_modules api/node_modules site/.next api/dist",
    "test": "cd api && bun run test",
    "lint": "bun run lint:site && bun run lint:api",
    "lint:site": "cd site && bun run lint",
    "lint:api": "cd api && bun run lint",
    "git:push": "./scripts/auto-push.sh",
    "git:save": "./scripts/quick-save.sh",
    "git:build-push": "./scripts/build-and-push.sh",
    "git:watch": "./scripts/watch-auto-commit.sh",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml build --no-cache",
    "deploy:local": "./scripts/deploy-cloud.sh --local",
    "deploy:remote": "./scripts/deploy-cloud.sh --remote",
    "monitor": "./scripts/monitor.sh --check",
    "monitor:watch": "./scripts/monitor.sh --monitor",
    "monitor:status": "./scripts/monitor.sh --status",
    "backup": "docker-compose -f docker-compose.prod.yml exec backup /backup.sh",
    "logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "logs:api": "docker-compose -f docker-compose.prod.yml logs -f api",
    "logs:site": "docker-compose -f docker-compose.prod.yml logs -f site",
    "logs:nginx": "docker-compose -f docker-compose.prod.yml logs -f nginx"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
