{
  "name": "katacore",
  "version": "2.0.0",
  "description": "KataCore StartKit v2 - Auto-deployment with SSL and Environment Generation",
  "private": true,
  "workspaces": [
    "site",
    "api"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:site\" \"bun run dev:api\"",
    "dev:site": "cd site && bun run dev",
    "dev:api": "cd api && bun run start:dev",
    "build": "bun run build:api && bun run build:site",
    "build:site": "cd site && bun run build",
    "build:api": "cd api && bun run build",
    "start": "concurrently \"bun run start:site\" \"bun run start:api\"",
    "start:site": "cd site && bun run start",
    "start:api": "cd api && bun run start:prod",
    "install:all": "bun install && cd site && bun install && cd ../api && bun install",
    "clean": "rm -rf site/node_modules api/node_modules site/.next api/dist",
    "test": "cd api && bun run test",
    "lint": "bun run lint:site && bun run lint:api",
    "lint:site": "cd site && bun run lint",
    "lint:api": "cd api && bun run lint",
    "git:push": "./scripts/autopush-git.sh",
    "git:save": "./scripts/quick-save.sh",
    "git:build-push": "./scripts/build-and-push.sh",
    "docker:install": "./scripts/install-docker.sh install",
    "deploy:v2": "./startkit-deployer.sh",
    "deploy:v2:clean": "./startkit-deployer.sh --clean",
    "deploy:v2:update": "./startkit-deployer.sh --update",
    "deploy:v2:ssl": "./startkit-deployer.sh --domain",
    "deploy:quick": "./quick-deploy.sh",
    "deploy:config": "./quick-deploy.sh --config-only",
    "deploy:rebuild": "./quick-deploy.sh --force-rebuild",
    "deploy:full": "./quick-deploy.sh --full",
    "deploy:source": "./quick-deploy.sh --source-only",
    "deploy:smart": "./quick-deploy.sh --smart",
    "deploy:cache:clear": "rm -rf .deploy-cache && echo '✅ Deployment cache cleared'",
    "deploy:cache:info": "cat .deploy-cache/deploy-info.json 2>/dev/null || echo '❌ No deployment cache found'",
    "deploy:history": "cat .deploy-cache/deployment-history.log 2>/dev/null || echo '❌ No deployment history found'",
    "env:create-template": "echo '📝 Creating .env.prod.example...' && ./universal-deployer.sh --create-env-template",
    "env:show-template": "cat .env.prod.example 2>/dev/null || echo '❌ No .env.prod.example found'",
    "env:validate": "echo '🔍 Validating environment files...' && ./scripts/validate-env.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
