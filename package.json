{
  "name": "katacore-startkit-v1",
  "version": "1.0.0",
  "description": "KataCore StartKit v1 - Production-ready full-stack application with universal cloud deployment",
  "keywords": ["startkit", "nextjs", "nestjs", "typescript", "docker", "postgresql", "redis", "minio", "nginx", "ssl", "production"],
  "private": true,
  "author": "KataCore Team",
  "license": "MIT",
  "workspaces": [
    "site",
    "api"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:site\" \"bun run dev:api\"",
    "dev:site": "cd site && bun run dev",
    "dev:api": "cd api && bun run start:dev",
    "build": "bun run build:api && bun run build:site",
    "build:site": "cd site && bun run build",
    "build:api": "cd api && bun run build",
    "start": "concurrently \"bun run start:site\" \"bun run start:api\"",
    "start:site": "cd site && bun run start",
    "start:api": "cd api && bun run start:prod",
    "install:all": "bun install && cd site && bun install && cd ../api && bun install",
    "clean": "rm -rf site/node_modules api/node_modules site/.next api/dist",
    "test": "cd api && bun run test",
    "lint": "bun run lint:site && bun run lint:api",
    "lint:site": "cd site && bun run lint",
    "lint:api": "cd api && bun run lint",
    
    "deploy:startkit": "./startkit-deployer.sh",
    "deploy:startkit:clean": "./startkit-deployer.sh --clean",
    "deploy:startkit:setup": "./startkit-deployer.sh --setup-only", 
    "deploy:startkit:config": "./startkit-deployer.sh --config-only",
    
    "local:dev": "docker compose -f docker-compose.local.yml up -d",
    "local:down": "docker compose -f docker-compose.local.yml down",
    "local:logs": "docker compose -f docker-compose.local.yml logs -f",
    "local:test": "./local-test.sh",
    
    "env:create-template": "./startkit-deployer.sh --create-env-template",
    "env:show-template": "cat .env.prod.template 2>/dev/null || echo '❌ No .env.prod.template found'",
    "env:validate": "./scripts/validate-env.sh",
    "pre-deploy": "./scripts/pre-deploy-check.sh",
    "cleanup": "./scripts/cleanup-deploy.sh",
    "deploy:clean": "./scripts/cleanup-deploy.sh && ./startkit-deployer.sh",
    "deploy:safe": "./scripts/pre-deploy-check.sh && ./startkit-deployer.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
