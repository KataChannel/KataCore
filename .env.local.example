# Local Development Environment Variables
# Copy this file to .env.local for local testing

# Node Environment
NODE_ENV=development

# Database Configuration (Local)
POSTGRES_DB=katacore_local
POSTGRES_USER=katacore_user
POSTGRES_PASSWORD=local_postgres_pass_123
DATABASE_URL=postgresql://katacore_user:local_postgres_pass_123@localhost:5432/katacore_local

# Redis Configuration (Local)
REDIS_PASSWORD=local_redis_pass_123
REDIS_URL=redis://:local_redis_pass_123@localhost:6379

# MinIO Configuration (Local)
MINIO_ROOT_USER=katacore_minio_admin
MINIO_ROOT_PASSWORD=local_minio_pass_123

# PgAdmin Configuration (Local)
PGLADMIN_EMAIL=admin@localhost.com
PGADMIN_PASSWORD=local_pgladmin_pass_123

# API Configuration (Local)
JWT_SECRET=local_jwt_secret_key_for_development_only_32_chars
API_VERSION=latest
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# Frontend Configuration (Local)
SITE_VERSION=latest
NEXT_PUBLIC_API_URL=http://localhost:3001

# Domain Configuration (Local)
DOMAIN=localhost
API_DOMAIN=localhost
ADMIN_DOMAIN=localhost
STORAGE_DOMAIN=localhost

# Local ports (exposed for debugging)
FRONTEND_PORT=3000
API_PORT=3001
POSTGRES_PORT=5432
REDIS_PORT=6379
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
PGADMIN_PORT=8080

# Development Settings
LOG_LEVEL=debug
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG=true

# Security (relaxed for local development)
FAIL2BAN_ENABLED=false
RATE_LIMIT=1000

# Performance (lower for local)
MEMORY_LIMIT=512m
CPU_LIMIT=0.5

# Application Settings
APP_NAME=KataCore-Local
APP_VERSION=dev
